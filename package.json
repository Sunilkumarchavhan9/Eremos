{
  "name": "eremos-core",
  "version": "0.1.0",
  "description": "Modular agent framework for on-chain activity monitoring.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node scripts/dev-agent.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rimraf dist node_modules",
    "agent:dev": "ts-node scripts/dev-agent.ts",
    "agent:test": "ts-node scripts/test-signal-thresholds.ts",
    "agent:validate": "ts-node scripts/validate-agent.ts",
    "agent:generate": "ts-node scripts/generate-agent.ts",
    "signal:generate": "ts-node scripts/generate-signal.ts",
    "export:memory": "ts-node scripts/export-agent-memory.ts",
    "simulate:cluster": "ts-node scripts/simulate-cluster.ts",
    "stress:test": "ts-node scripts/stress-test.ts",
    "preview:hash": "ts-node scripts/signalhashpreview.ts",
    "list:agents": "ts-node scripts/agent-list.ts",
    "precommit": "npm run lint && npm run test",
    "prepare": "husky install"
  },
  "keywords": [
    "agent",
    "onchain",
    "modular",
    "blockchain",
    "framework",
    "swarm",
    "signals",
    "monitoring",
    "defi",
    "crypto"
  ],
  "author": "EremosCore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EremosCore/Eremos.git"
  },
  "bugs": {
    "url": "https://github.com/EremosCore/Eremos/issues"
  },
  "homepage": "https://github.com/EremosCore/Eremos#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
